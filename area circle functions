import java.util.*;
public class areacirclefunctions{
    public static void my_function(float r,float pi) {
        double area=pi*r*r;
        System.out.println("area circle ="+area);
    }
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the radius:");
        float r=sc.nextFloat();
        float pi=3.14f;
        my_function(r, pi);
        sc.close();
    }
}

output:
enter the radius:
5
area circle =78.5
