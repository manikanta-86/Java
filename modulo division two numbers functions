import java.util.Scanner;

public class modulodivisiontwofunctions {
    public static void my_function(int n1,int n2) {
        if(n2==0){
            System.out.println("error! modulo division not possible");
        }
        else{
            int moddiv=n1%n2;
            System.out.println("modulo division two numbers ="+moddiv);
        }
    }
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the first number:");
        int n1=sc.nextInt();
        System.out.println("enter the second number:");
        int n2=sc.nextInt();
        my_function(n1, n2);
        sc.close();
    }
}

ouput:
enter the first number:
4
enter the second number:
0
error! modulo division not possible
